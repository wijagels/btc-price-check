{
  "manifest_version": 2,
  "name": "BTC Price Check",
  "description": "Fetches and displays the last, bid, and ask prices of Bitcoin.",
  "version": "2.0.0",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png",
		"256": "icons/icon256.png",
		"512": "icons/icon512.png"
  },
  "permissions": ["https://api.bitfinex.com/v1/pubticker/btcusd"],
  "browser_action": {
    "default_popup": "popup.html"
  }
}
